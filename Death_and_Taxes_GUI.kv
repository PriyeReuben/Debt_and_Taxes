DaTApp:

<DaTApp@BoxLayout>
    cols: 1
    orientation: 'vertical'

    BoxLayout:
        cols: 2
        size_hint: (1, .8)
        orientation: 'horizontal'

        Image:
            id: image_id
            source: root.image_source
            size_hint: (.75, 1)
        BoxLayout:
            cols: 2
            orientation: 'vertical'
            size_hint: (.25, 1)

            GridLayout:
                cols:2

                Label:
                    text: "Salary:"
                    text_size: self.width, None
                    color: (0,1,0,1)

                Label:
                    text: root.salary_str
                    text_size: self.width, None
                    color: (0,1,0,1)

                Label:
                    text: "Federal Taxes:"
                    text_size: self.width, None
                    color: (1,0,0,1)
                Label:
                    text: root.federal_tax_str
                    text_size: self.width, None
                    color: (1,0,0,1)

                Label:
                    text: "Effective Tax Rate:"
                    text_size: self.width, None
                    color: (0,0,1,1)
                Label:
                    text: root.effective_tax_rate_str
                    text_size: self.width, None
                    color: (0,0,1,1)



    BoxLayout:
        cols: 3
        orientation: 'horizontal'
        size_hint: (1,.2)


        BoxLayout:
            orientation: 'horizontal'
            size_hint: (.33, 1)

            Label:
                text: '$'
                font_size: 30
                size_hint: (.25, 1)

            BoxLayout:
                orientation: 'vertical'
                TextInput:
                    id: text_input_id
                    multiline: False
                    hint_text: 'Put your salary here and press enter...'
                    #on_text_validate: root.process_salary_text(text_input_id.text)
                    on_text_validate: root.process_salary_text(self)
                    text_size: self.width, None
                    size_hint: (1, .8)
                Label:
                    text: "Press Enter after changing salary.  Select filing status."
                    text_size: self.width, None
                    bold: True


        Spinner:
            id: spinner_id
            size_hint: (.33, 1)
            text: 'Select Filing Status:'
            values: 'Single', 'Married Jointly', 'Married Separately', 'Head of Household'
            on_text: root.spinner_selection(spinner_id.text)
                #print("The spinner {} has text {}".format(self, self.text))


        Button:
            text: "Calculate Federal Taxes"
            size_hint: (.33, 1)
            on_press: root.on_calculate_clicked()

